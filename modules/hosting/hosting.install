        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
        'default' => 0,
      ),
      'name' => array(
        'type' => 'varchar',
        'length' => 50,
        'not null' => TRUE,
      ),
     ),
    'primary key' => array('nid'),
    'unique keys' => array(
      'name'     => array('name')
    ),    
  
  );
  return $schema;
}

