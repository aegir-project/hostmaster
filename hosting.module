function _hosting_default_path() {
  return array(0 => array('nid' => ereg_replace("/webroot$", "", $_SERVER['DOCUMENT_ROOT'])));
}

function _hosting_default_client() {
  return array( 0 => array('nid' => variable_get('hosting_default_client', 1)),);
}

